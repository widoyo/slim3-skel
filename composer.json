{
    "name": "akrabat/slim3-skeleton",
    "description": "Simple Slim Framework 3 skeleton with Twig & Monolog.",
    "license": "BSD-3-Clause",
    "type": "project",
    "keywords": ["slim-framework", "skeleton"],
    "authors": [
        {
            "name": "Rob Allen",
            "email": "rob@akrabat.com",
            "homepage": "http://akrabat.com"
        }
    ],
    "autoload": {
        "psr-4": {
            "App\\": "app/src",
            "Tests\\": "tests/"
        }
    },
    "require": {
        "slim/slim": "^3.0",
        "slim/twig-view": "^2.0",
        "slim/flash": "^0.1.0",
        "monolog/monolog": "^1.13",
        "vlucas/phpdotenv": "^5.3",
        "cboden/ratchet": "^0.4.3",
        "bryanjhv/slim-session": "~3.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^9"
    },
    "scripts": {
        "start": "php -S localhost:8000 -t public",
        "test": "phpunit tests"
    }
}
